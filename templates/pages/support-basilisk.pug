extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    .container.px-3.text-center
        .support-basilisk-title-wrapper
            .headline-2.text-uppercase.support-basilisk-title Support Basilisk
            .headline-2.text-uppercase.support-basilisk-title to Become a Parachain
        .infographic-item
            span.infographic-text Parachain is an exclusive slot on a Kusama network, enabling shared security and interoperability
            img.infographic-img(src=url('images/infographic-1.svg'))
        .infographic-item
            img.infographic-img(src=url('images/infographic-2.svg'))
            span.infographic-text Kusama relay connects parachain but starts as a blank slate - with open parachain slots.
        .infographic-item
            span.infographic-text Parachains are to be reserved with KSM tokens. Various blockchain projects compete for scarce parachain slots and KSM holders lock their KSM tokens for a certain period of time to help their favorite get the slot.
            img.infographic-img(src=url('images/infographic-3.svg'))
        .infographic-item
            img.infographic-img(src=url('images/infographic-4.svg'))
            span.infographic-text Basilisk will participate in the upcoming Kusama parachain auctions to earn a slot among the first. The backers of the auction will be rewarded with BSX as they lock their KSM to support Basilisk candidacy.
    .container.px-3.learn-how-to-support.text-center
        .headline-2.text-uppercase.support-basilisk-title.pb-5 Learn How to Support Basilisk Crowdloan
        span.learn-how-to-support-content Get BSX token for supporting Basilisk parachain crowdloan
        .btn-wrapper
            a.btn.btn-support-basilisk.btn__md SUPPORT BASILISK
            a.btn.btn-support-basilisk.btn__md LEARN MORE ABOUT PARACHAINS
